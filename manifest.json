{
    "manifest_version": 2,
    "name": "UpSolve tracker",
    "version": "0.01",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_icon": "greytick.png",
        "default_title": "UpSolve tracker",
        "default_popup" : "popup.html"
    },
    "permissions": [
        "tabs",
        "storage"
    ]
}